    $EmployeeExportTarget.ModifiedBy = $employee.ModifiedBy
    $EmployeeExportTarget.ModifiedDateTime = $employee.ModifiedDateTime
    $EmployeeExportTarget.VersionStamp = $employee.VersionStamp
